# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://autogit-user:YOUR_PASSWORD@autogit-cluster.xxxxx.mongodb.net/autogit?retryWrites=true&w=majority

# GitHub OAuth Credentials
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Session Secret (generate a random string)
SESSION_SECRET=generate_a_random_secure_string_here

# URLs
CLIENT_URL=https://your-app.vercel.app
BACKEND_URL=https://your-app.onrender.com

# Environment
NODE_ENV=production

# Port (Render uses PORT environment variable)
PORT=10000
